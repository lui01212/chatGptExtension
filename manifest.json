{
  "manifest_version": 2,
  "name": "cuongtruyen.com",
  "description": "ChatGpt create content cuongtruyen.com",
  "version": "1.0.1",
  "icons": {
    "16": "images/16.png",
    "32": "images/32.png"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "js": [
        "content.js"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ],
  "browser_action": {
    "default_icon": {
      "19": "images/icon.png",
      "38": "images/icon.png"
    },
    "default_title": "cuongtruyen.com",
    "default_popup": "popup.html"
  }
}